<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactUs">

    <TextView
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fragmenttitlesbackground"
        android:gravity="center"
        android:text="Contact Us"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="197dp"
        android:layout_height="174dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/acmlogonew" />

    <Button
        android:id="@+id/call_us"
        android:layout_width="249dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/fragmenttitlesbackground"
        android:text="Call Us"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <Button
        android:id="@+id/meesage_us"
        android:layout_width="249dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="370dp"
        android:background="@drawable/fragmenttitlesbackground"
        android:text="Message Us"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/visitwebsite"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="440dp"
        android:background="@drawable/fragmenttitlesbackground"
        android:text="Visit  Website"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="520dp"
        android:weightSum="3">


        <ImageView
            android:id="@+id/linkedinacm"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/linkedin" />

        <ImageView
            android:id="@+id/facebookacm"
            android:layout_width="79dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:src="@drawable/fbicon" />
    </LinearLayout>
</FrameLayout>